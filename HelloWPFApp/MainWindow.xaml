<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.527,0.541">
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" RenderTransformOrigin="-2.425,0.593"/>
        <RadioButton x:Name="rbHello" Content="Hello" HorizontalAlignment="Left" Margin="289,97,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="rbGoodbye" Content="Goodbye" HorizontalAlignment="Left" Margin="459,97,0,0" VerticalAlignment="Top"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" Width="244" Click="Button_Click"/>

    </Grid>
</Window>
